<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="4dp"
    android:background="@drawable/bg_rounded_box"
    android:elevation="2dp">

    <!-- Header with year and poll count -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2023"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primary"/>

        <TextView
            android:id="@+id/tv_poll_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Анкет: 1234"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:background="@drawable/bg_rounded_badge"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="12dp"/>

    <!-- Places table -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 1st Place -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_table_row"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp">
            
            <TextView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:text="🥇"
                android:textSize="16sp"
                android:gravity="center"/>
                
            <TextView
                android:id="@+id/tv_first_place"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1. Название марки (123 голоса) - Автор"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- 2nd Place -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_table_row"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp">
            
            <TextView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:text="🥈"
                android:textSize="16sp"
                android:gravity="center"/>
                
            <TextView
                android:id="@+id/tv_second_place"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2. Название марки (123 голоса) - Автор"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- 3rd Place -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_table_row"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp">
            
            <TextView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:text="🥉"
                android:textSize="16sp"
                android:gravity="center"/>
                
            <TextView
                android:id="@+id/tv_third_place"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="3. Название марки (123 голоса) - Автор"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:paddingStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout> 